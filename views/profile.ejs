<% include header %>
        
        <section class="default-section profile">
            <div class="settings-column form-dark">
                <form method="post">
                    <h2 class="sr-only">Settings</h2>
                    <div class="illustration"><i class="icon ion-ios-unlocked-outline"></i></div>
                    <div class="form-group"><input class="form-control" type="email" name="email" placeholder="New email"></div>
                    <div class="form-group"><input class="form-control" type="text" name="username" placeholder="New username"></div>
                    <div class="form-group"><input class="form-control" type="password" name="password" placeholder="New password"></div>
                    <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password confirmation"></div>
                    <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Current password" required></div>
                    <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Save</button></div>
                    <br>
                    <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Delete profile</button></div>
                </form>
            </div>
            <div class="rated-movies-column">
                <div class="text-header"> Rated movies </div>
        
                <div class="row streched-row">
                    
                    <% movies.forEach(function(movie) { %>
                        <div class="card card-dark col-lg-4 col-md-6 col-sm-12">
                            <img class="card-img-top" src="https://via.placeholder.com/200x80" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title"> <%= movie.title %> </h5>
                                <p class="card-text"><%= movie.description %> </p>
                            </div>
                            <div class="card-footer extended-card-footer" style="border-top: 1.5px dotted grey;">
                                    <a href="/movie/<%= movie.id %>">Read More</a>
                                    <a href="#"><i class="fa fa-check"></i> <%= movie.rating_count %> </a>
                                    <a href="#"><i class="fa fa-heart"></i> <%= movie.rating %> Score</a>
                            </div>
                        </div>
                    <% }) %>

                </div>   
            </div>
        </section>
        
<% include footer %>

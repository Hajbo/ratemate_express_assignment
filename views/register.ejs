<% include header %>

        <section class="default-section form-dark">
            <div class="form-container">
                <form method="post" action="/register">
                    <h2 class="sr-only">Registration Form</h2>
                    <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
                    <div class="form-group"><input class="form-control" type="text" name="username" placeholder="Username"></div>
                    <div class="form-group"><input class="form-control" type="email" name="email" placeholder="Email"></div>
                    <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password"></div>
                    <div class="form-group"><input class="form-control" type="password" name="password-confirm" placeholder="Password confirmation"></div>
                    <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Register</button></div>
                </form>
            </div>
        </section>

<% include footer %>